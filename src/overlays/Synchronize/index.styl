.tcfSynchronize--message
  display: flex
  flex-flow: column nowrap
  align-items: center
  
  text-align: center

.tcfSynchronize--messageIcon 
  margin-bottom: 10px
  
  &.error
    color: #c00

  &.finished
    color: #0c0

.tcfSynchronize--title
  margin-bottom: 20px

  font-size: 16px

.tcfSynchronize--working
  display: flex
  align-items: center
  justify-content: center
  width: 100%
  height: 200px
