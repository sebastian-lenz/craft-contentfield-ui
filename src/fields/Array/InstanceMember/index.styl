@require '../../../includes'

.tcfArrayWidgetMember
  depth-colors()
  position: relative
  padding: 5px 0

  // Prevent Chrome from showing wrong drag previews
  // @see https://github.com/react-dnd/react-dnd/issues/832
  &.isCollapsed
    transform: translate3d(0, 0, 0)

  &.isDragging
    visibility: hidden

  &.isDragging:after
    content: ''
    display: block
    position: absolute
    top: 5px
    right: 0
    bottom: 5px
    left: 0

    background: $gray-darker

    visibility: visible

.tcfArrayWidgetMember--panel
  position: relative
  overflow: hidden

  background: #F8FAFC
  border-radius: 5px
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2)
  
  .isExpanded:not(.depth-1) > &
    background: #fff

  .isExpanded > &:after
    content: ''
    display: block
    position: absolute
    top: 0
    bottom: 0
    left: 0
    
    border-left: 5px solid var(--tcf-primary-color)


// Header
//

.tcfArrayWidgetMember--header
  display: flex
  flex-flow: row nowrap
  min-height: 36px

  background: $gray-light

  white-space: nowrap

.tcfArrayWidgetMember--headerHandle
  display: flex
  flex-flow: row nowrap
  align-items: center

  flex: 1
  padding: 0 10px

  &.enabled
    cursor: move

  &.enabled:hover
    color: var(--tcf-primary-color)

  > *
    margin-right: 8px

  .isExpanded > * > & > .tcfIcon
    color: var(--tcf-primary-color)

.tcfArrayWidgetMember--headerVisibility
  padding: 0 0 0 10px
  align-self: center

  color: $red

.tcfArrayWidgetMember--headerLabel
  font-weight: bold
  line-height: 36px

  &.isHidden
    color: $red
    text-decoration: line-through

.tcfArrayWidgetMember--headerPreview
  position: relative
  flex: 1
  align-self: stretch
  margin: 0 0 0 5px

  opacity: 0.5

  > *
    overflow: hidden
    position: absolute
    align-items: center
    top: 0
    left: 0
    width: 100%
    height: 100%

    line-height: 36px
    text-overflow: ellipsis
    white-space: nowrap    

.tcfArrayWidgetMember--headerHandleIcon
  color: rgba(0, 0, 0, 0.25)

  *:hover > &
    color: #0d78f2

.tcfArrayWidgetMember--headerActions
  display: flex
  flex-flow: row nowrap
  padding: 0 0 0 10px

.tcfArrayWidgetMember--headerActionsButton
  padding: 8px 10px

  border-left: 1px solid #DEDEE1
  cursor: pointer

  > .tcfIcon
    margin: 0 8px

  > .tcfIcon:first-child
    margin-left: 0

  > .tcfIcon:last-child
    margin-right: 0

  &.primary
    background: var(--tcf-primary-color)
    color: $white

    font-weight: bold


// Content
//

.tcfArrayWidgetMember--body
  position: relative
  overflow: hidden
  padding: 16px
