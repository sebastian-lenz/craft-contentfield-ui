@require '../../../includes'

.tcfArrayWidgetMember
  position: relative
  padding: 5px 0

  // Prevent Chrome from showing wrong drag previews
  // @see https://github.com/react-dnd/react-dnd/issues/832
  &.isCollapsed
    transform: translate3d(0, 0, 0)

  &.isDragging
    visibility: hidden

  &.isDragging:after
    content: ''
    display: block
    position: absolute
    top: 5px
    right: 0
    bottom: 5px
    left: 0

    background: $gray-darker

    visibility: visible

.tcfArrayWidgetMember--panel
  position: relative
  overflow: hidden

  background: #f1f5f8
  
  .depth-1 > &
    border: 1px solid #DEDEE1

  *:not(.depth-1) > &
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2)
  
  .isExpanded:not(.depth-1) > &
    background: #fff

  .isExpanded > &:after
    content: ''
    display: block
    position: absolute
    top: 0
    left: 0
    height: 36px 
    
    border-left: 3px solid $primary-color

  .isExpanded.depth-1 > &:after
    height: auto
    bottom: 0


// Header
//

.tcfArrayWidgetMember--header
  display: flex
  flex-flow: row nowrap
  align-items: stretch
  min-height: 36px

  background: $gray-light

  white-space: nowrap

.tcfArrayWidgetMember--headerHandle
  display: flex
  flex-flow: row nowrap
  align-items: center

  flex: 1
  padding: 0 10px
  min-width: 0

  &.enabled
    cursor: move

  &.enabled:hover
    color: $primary-color

  > *
    margin-right: 8px

  .isExpanded > * > & > .tcfIcon
    color: $primary-color

.tcfArrayWidgetMember--headerPreview
  position: relative
  overflow: hidden
  text-overflow: ellipsis
  margin: 0 20px 0 5px

  opacity: 0.5

.tcfArrayWidgetMember--headerHandleIcon
  color: rgba(0, 0, 0, 0.25)

  *:hover > &
    color: #0d78f2

.tcfArrayWidgetMember--headerActions
  display: flex
  flex-flow: row nowrap
  padding: 0 0 0 10px

.tcfArrayWidgetMember--headerActionsButton
  padding: 8px 10px

  border-left: 1px solid #DEDEE1
  cursor: pointer

  > .tcfIcon
    margin: 0 8px

  > .tcfIcon:first-child
    margin-left: 0

  > .tcfIcon:last-child
    margin-right: 0

  &.primary
    background: $primary-color
    color: $white

    font-weight: bold


// Content
//

.tcfArrayWidgetMember--body
  position: relative
  overflow: hidden
  padding: 16px

  border-top: 1px solid $border-color

.tcfArrayWidgetMember--preview
  border-top: 1px solid $border-color
