.tcfLinkWidget
  display: flex
  flex-flow: row nowrap
  align-items: stretch

.tcfLinkWidget--type
  width: 100px
  margin-right: 10px

.tcfLinkWidget--editor
  display: flex
  flex-flow: row nowrap
  align-items: flex-start
  justify-content: space-between
  flex: 1
  margin-right: 10px

  &:last-child
    margin-right: 0

.tcfLinkWidget--editorHash
  max-width: 250px
  margin: 0 0 0 10px
  flex: 1


// Hash editor
// -----------

.tcfLinkWidget--hashEditorSelect  
  background: #fbfcfe
  border: 1px solid rgba(96, 125, 159, 0.25)
  border-radius: 0 2px 2px 0
  box-shadow: inset 0 1px 4px -1px rgba(96, 125, 159, 0.25)

.tcfLinkWidget--hashEditorSelectWrap
  flex: 1
  
