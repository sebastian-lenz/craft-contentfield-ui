.tcfColorInputSaturation
  position: relative
  height: 0
  padding-bottom: 75%

  user-select: none

  &:before,
  &:after
    content: ''
    position: absolute
    z-index: 1
    top: 0
    right: 0
    bottom: 0
    left: 0

  &:before
    background: linear-gradient(to right, rgba(255,255,255,1), rgba(255,255,255,0))

  &:after
    background: linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,1))

.tcfColorInputSaturation--value
  position: absolute
  box-sizing: border-box
  z-index: 2
  width: 8px
  height: 8px
  margin: -4px 0 0 -4px

  border: 1px solid #fff
  border-radius: 4px
  box-shadow: 0 0 1px 1px #000
