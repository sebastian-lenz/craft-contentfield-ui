@require '../../includes'

.tcfFlyout
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

.tcfFlyout--panel
  position: absolute

  filter: drop-shadow(0 0 5px rgba(0, 0, 0, 0.2))

.tcfFlyout--handle
  content: ''
  display: block
  position: absolute
  left: 50%
  width: 0
  height: 0
  margin-left: -8px

  border: 8px solid transparent

  .above > &
    bottom: -16px
    border-top-color: $white

  .below > &
    top: -16px
    border-bottom-color: $white

.tcfFlyout--body
  position: relative
  overflow: hidden

  background: $white
  border-radius: 3px
