.tcfActivityIndicator
  display: flex
  flex-flow: row nowrap
  align-items: center
  justify-content: center

  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0


.tcfActivityIndicator--bounce
  width: 12px
  height: 12px
  margin: 0 2px

  background-color: #333f4d
  border-radius: 100%

  animation: tcfActivityIndicator--keyframes 1.4s infinite ease-in-out both

  &.first
    animation-delay: -0.32s

  &.second
    animation-delay: -0.16s

@keyframes tcfActivityIndicator--keyframes
  0%, 80%, 100%
    transform: scale(0)
  40%
    transform: scale(1.0)
