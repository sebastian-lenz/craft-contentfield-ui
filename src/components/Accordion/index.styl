.tcfAccordion
  border-radius: 5px
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1)

.tcfAccordion--label
  display: flex
  flex-flow: row nowrap
  align-items: center
  gap: 8px
  min-height: 36px
  padding: 0 10px

  cursor: pointer
  font-weight: bold
  line-height: 36px

.tcfAccordion--content
  padding: 14px

  border-top: 1px solid rgba(0, 0, 20, 0.025)

  *:not(.isExpanded) > &
    display: none
